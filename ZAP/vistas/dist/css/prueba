html,
body {
  height: 100%; /* Asegura que el HTML y el cuerpo ocupen todo el alto de la ventana. */
}

/* Estilos específicos cuando el layout es "boxed" (en caja) */
.layout-boxed html,
.layout-boxed body {
  height: 100%; /* También al 100% para el modo en caja. */
}
body {
  font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif; /* Define la fuente principal para todo el texto. */
  font-weight: 400; /* Peso de la fuente normal. */
  overflow-x: hidden; /* Evita barras de desplazamiento horizontales no deseadas. */
  overflow-y: auto; /* Permite el desplazamiento vertical si el contenido excede el alto. */
}

.wrapper {
  height: 100%; /* El contenedor principal ocupa el 100% del alto. */
  position: relative; /* Establece un contexto de posicionamiento para elementos internos. */
  overflow-x: hidden; /* Evita el scroll horizontal dentro del wrapper. */
  overflow-y: auto; /* Permite el scroll vertical si el contenido del wrapper es largo. */
}
/* Pseudoelementos para "limpiar floats" dentro de .wrapper, una técnica para asegurar que los elementos flotados no rompan el layout. */
.wrapper:before,
.wrapper:after {
  content: " ";
  display: table;
}
.wrapper:after {
  clear: both;
}

/* Estilos para el layout "en caja" */
.layout-boxed .wrapper {
  max-width: 1250px; /* Limita el ancho máximo del contenido. */
  margin: 0 auto; /* Centra el contenedor en la página. */
  min-height: 100%; /* Altura mínima del 100%. */
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.5); /* Añade una sombra para dar el efecto de caja flotante. */
  position: relative;
}
.layout-boxed {
  background: url('../img/boxed-bg.jpg') repeat fixed; /* Fondo de imagen repetido para el área fuera de la caja. */
}